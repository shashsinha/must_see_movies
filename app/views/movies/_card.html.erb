<div class="card mb-3">
  <h2 class="card-header h4">
    Movie #<%= movie.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Movie title</dt>
      <dd><%= movie.movie_title %></dd>

      <dt>Release date</dt>
      <dd><%= movie.release_date %></dd>

      <dt>Movie duration</dt>
      <dd><%= movie.movie_duration %></dd>

      <dt>Movie description</dt>
      <dd><%= movie.movie_description %></dd>

      <dt>Director</dt>
      <dd>
        <% if @movie.director.present? %>
          <%= link_to movie.director, movie.director %>
        <% end %>
      </dd>

      <dt>Movie image</dt>
      <dd>
        <%= cl_image_tag @movie.movie_image, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back movie, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_movie_url(movie), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to movie, method: :delete, data: { confirm: "Do you really want to delete this movie?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(movie.updated_at) %> ago
  </div>
</div>
