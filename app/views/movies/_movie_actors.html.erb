<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Actors

    <a data-toggle="collapse" href="#movie_actors_new_form">
      Add actor
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.actors.each do |actor| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to actor, actor %>

        <%= link_to actor, method: :delete, data: { confirm: "Do you really want to delete this actor" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_actors_new_form">
        <%= render partial: "movies/movie_actors_new_form" %>
      </div>
    </div>

  </ul>
</div>
