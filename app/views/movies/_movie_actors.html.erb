<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Actors

    <a data-toggle="collapse" href="#movie_actors_new_form">
      Add actor
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @movie.actors.each do |actor| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to actor, actor %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to actor, method: :delete, data: { confirm: "Do you really want to delete this actor" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="movie_actors_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
