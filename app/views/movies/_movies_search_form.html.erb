<%= search_form_for @q, :class => collapse_search_form, :id => "movies_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :movie_title_cont, "Movie title contains" %>
    <%= f.text_field :movie_title_cont, :class => "form-control", :placeholder => "Movie title contains" %>
  </div>

  <div class="form-group">
    <%= f.label :movie_description_cont, "Movie description contains" %>
    <%= f.text_field :movie_description_cont, :class => "form-control", :placeholder => "Movie description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :movie_duration_cont, "Movie duration contains" %>
    <%= f.text_field :movie_duration_cont, :class => "form-control", :placeholder => "Movie duration contains" %>
  </div>

  <div class="form-group">
    <%= f.label :release_date, "Release date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='release_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :release_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Release date greater than or equal to", :data => {:target => '#release_dategteqPicker'} %>
          <div class="input-group-append" data-target='#release_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='release_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :release_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Release date less than or equal to", :data => {:target => '#release_datelteqPicker'} %>
          <div class="input-group-append" data-target='#release_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#release_dategteqPicker').datetimepicker({
              format: 'MM/DD/YYYY'
          });
          $('#release_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'MM/DD/YYYY'
          });
          $('#release_dategteqPicker').on("dp.change", function (e) {
              $('#release_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#release_datelteqPicker').on("dp.change", function (e) {
              $('#release_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :actors_actor_name_cont, "Actors actor_name contains" %>
    <%= f.text_field :actors_actor_name_cont, :class => "form-control", :placeholder => "Actors actor_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :director_director_name_cont, "Director director_name contains" %>
    <%= f.text_field :director_director_name_cont, :class => "form-control", :placeholder => "Director director_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/movies" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#movies_filters">
  Show filters
</a>
