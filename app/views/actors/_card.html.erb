<div class="card mb-3">
  <h2 class="card-header h4">
    Actor #<%= actor.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Actor name</dt>
      <dd><%= actor.actor_name %></dd>

      <dt>Starred in</dt>
      <dd>
        <% if @actor.starred_in.present? %>
          <%= link_to actor.starred_in, actor.starred_in %>
        <% end %>
      </dd>

      <dt>Actor dob</dt>
      <dd><%= actor.actor_dob %></dd>

      <dt>Actor bio</dt>
      <dd><%= actor.actor_bio %></dd>

      <dt>Actor image</dt>
      <dd>
        <%= cl_image_tag @actor.actor_image, class: "img-fluid" %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back actor, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_actor_url(actor), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to actor, method: :delete, data: { confirm: "Do you really want to delete this actor?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(actor.updated_at) %> ago
  </div>
</div>
